{{!
    @template block_superframe/frame

    This template renders a url in an iframe of given size.

    Example context (json):
    {
        "heading": "My superframe",
        "url": "http://www.moodlebites.com",
        "height": "400",
        "width": "600"
    }
}}
<div class="container">
  <div style="display: flex; margin-bottom: 1rem">
    <img
      src="http://localhost/MyMoodleSite/pluginfile.php/5/user/icon/boost/f1?rev={{
        image
      }}"
      class="userpicture"
      style="margin-right: 1rem"
      width="100"
      height="100"
    />
    <p style="margin-top: auto; margin-bottom: auto">{{ fullname }}</p>
  </div>

  <h5>{{ heading }}</h5>
  {{> block_superframe/links}}
  <iframe src="{{ url }}" height="{{ height }}" width="{{ width }}"></iframe>
  <p id="block_superframe_about" class="text-primary">
    {{#str}}about, block_superframe{{/str}}
  </p>
  <p>
    <a href="{{{returnlink}}}">{{#str}}returntext, block_superframe{{/str}}</a>
  </p>
</div>
